                  </GridPane>
               </bottom>
               <center>
                  <TextArea fx:id="tplText" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <bottom>
                  <GridPane BorderPane.alignment="CENTER">
                     <children>
                        <Button onAction="resetData" mnemonicParsing="false" text="重置" />
                        <Button onAction="#chooseData" mnemonicParsing="false" text="选择文件" GridPane.columnIndex="1" />
                     </children>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
