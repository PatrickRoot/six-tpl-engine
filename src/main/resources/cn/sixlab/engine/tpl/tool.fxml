                  <TextArea id="dataText" fx:id="dataText" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </items>
      </SplitPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <bottom>
            <GridPane BorderPane.alignment="CENTER">
               <children>
                  <Button onAction="resetResult" mnemonicParsing="false" text="清空结果" />
